
<div class="row">

<div class="col-12 book-notes">
  <div class="text-right mb-2">
    <%= link_to "Add Note", new_book_note_path(@book), class: "btn btn-success" %>
  </div>
  <% if @book.notes.any? %>
    <% @book.notes.each do |note| %>
    <div class="card mb-2">
      <div class="card-body">
        <h5 class="card-title"><%= link_to note.title, book_note_path(note.book, note) %></h5>
        <p class="card-text"><%= note.page %></p>
        <!-- <a href="#" class="btn btn-primary">Button</a> -->
      </div>
    </div>
    <% end %>
  <% end %>
</div>

</div>

