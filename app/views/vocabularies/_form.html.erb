<%= form_with(model: [@book, @vocabulary], remote: true) do |f| %>
  <div class="form-group">
    <%= f.label :word %>
    <%= f.text_field :word, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :meaning %>
    <%= f.text_field :meaning, class: "form-control" %>
  </div>
  <%= f.submit "Add Vocabulary", class: "btn btn-success" %>
<% end %>
