<%= form_with(model: [@book, @vocabulary]) do |f| %>

<div id="errors"></div>

  <div class="form-group">
    <%= f.text_field :word, class: "form-control", placeholder: "Word" %>
  </div>
  <div class="form-group">
    <%= f.text_field :meaning, class: "form-control", placeholder: "Meaning" %>
  </div>
  <%= f.submit "Add Vocabulary", class: "btn btn-success" %>
<% end %>
